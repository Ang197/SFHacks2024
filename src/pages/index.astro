---
// Component Imports
import Layout from "../layouts/Layout.astro";
import SponsorPage from '../components/sponsors/SponsorPage';
---

<Layout title="SF Hacks 2023">
	<main>
		<section class="hero">
			<img class="hero--image" src="/sfhacks/logo_white&blue.png" />
			<div class="hero--text">

				<p>SF Hacks at San Francisco State University Presents</p>
				<h1>2024 HACKATHON</h1>
				<p>April 5th -7th 2024 @SF State Annex 1</p>
				<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
				<button type="button">Register Now</button>
			</div>
		</section>

		<SponsorPage/>
	</main>
</Layout>

<style>
	.hero {
		display: flex;
		flex-direction: row;
		align-items: center;
		margin: 50px;
		margin-left: 200px;
	}

	.hero--image {
		height: 600px;
	}

	.hero--text {
		display: flex;
		flex-direction: column;
		align-items: center;
		color: rgba(245, 245, 245, 0.65);
		font-family: 'Sen';
		font-size: 14px;
		font-style: normal;
		font-weight: 500;
		line-height: normal;
	}
</style>